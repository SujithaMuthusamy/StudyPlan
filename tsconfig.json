{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",

    "allowJs": true,
    "checkJs": false,

    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "sourceMap": false
  },

  "include": ["Server/**/*", "server/**/*", "**/*.js"]
}
